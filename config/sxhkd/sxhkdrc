alt + Return
	alacritty

alt + @space
	dmenu_run

super + {_,shift + }{h, j, k, l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

alt + Escape
	pkill -USR1 -x sxhkd

alt + F4
	bspc quit

alt + {_,shift + }q
	bspc node -{c,k}

super + r
	bspc node @focused:/ -R 90

super + e
	bspc node @parent:/ -R 90

super + shift + 0
	bspc desktop -B

super + f
	bspc desktop -l next
